{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["flutter", "dart"],
      "groupName": "flutter"
    },
    {
      "matchPackageNames": [
        "cloud_firestore",
        "firebase_analytics",
        "firebase_auth",
        "firebase_core",
        "firebase_crashlytics",
        "firebase_remote_config"
      ],
      "groupName": "firebase"
    },
    {
      "matchManagers": ["pyenv"],
      "automerge": false
    }
  ],
  "rangeStrategy": "pin"
}
